<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Details</title>
</head>

<body>

    <div class="details content">
        <form method="POST">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" required value="<%= student.firstName %>">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" required value="<%= student.lastName %>"">
            <label for=" teacher">Teacher:</label>
            <input type="text" id="teacher" name="teacher" required value="<%= student.teacher %>">
            <label for="siblings">Siblings:</label>
            <input id="siblings" name="siblings" value="<%= student.siblings %>"></input>
            <div> <button>Update</button></div>

        </form>
        <h2>

        </h2>

        <button>
            <a class="delete" data-doc="<%= student._id %>">delete</a>
        </button>
    </div>

    </div>
    <script>
        const trashcan = document.querySelector('a.delete');
        trashcan.addEventListener('click', (e) => {
            const endpoint = `/allstudents/${trashcan.dataset.doc}`;
            fetch(endpoint, {
                method: 'DELETE',
            })
                .then(response => response.json())
                .then(data => window.location.href = data.redirect)
                .catch(err => console.log(err));
        });

    </script>
</body>

</html>